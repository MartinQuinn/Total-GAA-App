<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_label_club_name"
        android:text="Name: "
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_club_name"
        android:layout_toRightOf="@+id/TextView_label_club_name"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_label_county_name"
        android:text="County Name: "
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TextView_label_club_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_county_name"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TextView_label_club_name"
        android:layout_toRightOf="@+id/TextView_label_county_name"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_label_location"
        android:text="Location: "
        android:layout_below="@+id/TextView_county_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_location"
        android:layout_below="@+id/TextView_label_county_name"
        android:layout_toRightOf="@id/TextView_label_location"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />
</RelativeLayout>